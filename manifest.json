{
  "manifest_version": 2,

  "name": "OpenCompare",
  "short_name": "OpenCompare",
  "description": "Replace any comparison table by OpenCompare editor",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["backgroundPage.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}
